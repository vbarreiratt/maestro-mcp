# Maestro MCP - Environment Configuration

# =================================
# LOCAL LIBRARY CONFIGURATION 
# =================================
# Local library is always active and requires no configuration
LOCAL_LIBRARY_PATH=./src/data/library.db
VECTOR_DB_PATH=./src/data/vector_embeddings

# =================================
# ONLINE LIBRARY CONFIGURATION
# =================================
# Set to 'true' to enable online library features
ONLINE_LIBRARY_ENABLED=false

# Cache online results locally for faster access
CACHE_ONLINE_RESULTS=true

# Automatic sync interval (hours)
SYNC_INTERVAL_HOURS=24

# =================================
# SUPABASE CONFIGURATION
# =================================
# Required only if ONLINE_LIBRARY_ENABLED=true
# Get these values from your Supabase project dashboard
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =================================
# VECTOR SEARCH CONFIGURATION
# =================================
# Optional: OpenAI API key for enhanced semantic search
# If not provided, fallback fuzzy search will be used
OPENAI_API_KEY=your_openai_api_key_here

# =================================
# EXAMPLE CONFIGURATIONS
# =================================

# Example 1: Local-only setup (recommended for most users)
# ONLINE_LIBRARY_ENABLED=false
# LOCAL_LIBRARY_PATH=./src/data/library.db
# VECTOR_DB_PATH=./src/data/vector_embeddings

# Example 2: Hybrid setup with Supabase
# ONLINE_LIBRARY_ENABLED=true
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# CACHE_ONLINE_RESULTS=true
# SYNC_INTERVAL_HOURS=6

# Example 3: Enhanced search with OpenAI
# OPENAI_API_KEY=sk-...
# ONLINE_LIBRARY_ENABLED=true
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...